<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_actvity"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <ImageView
        android:id="@+id/jokeImageView"
        android:layout_width="@dimen/image_dimension"
        android:layout_height="@dimen/image_dimension"
        android:layout_marginStart="@dimen/margin_start_logo_image"
        android:layout_marginTop="@dimen/margin_top_logo_image"
        android:layout_marginEnd="@dimen/margin_end_logo_image"
        android:src="@drawable/logo_mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="regular"
        android:id="@+id/jokeTextView"
        android:layout_width="@dimen/text_view_width"
        android:layout_height="@dimen/text_view_height"
        android:layout_marginStart="@dimen/text_view_margin_start"
        android:layout_marginTop="@dimen/text_view_margin_top"
        android:layout_marginEnd="@dimen/text_view_margin_end"
        android:textSize="@dimen/text_size"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        app:flow_verticalAlign="top"
        android:text=""
        android:layout_marginBottom="@dimen/text_view_margin_botton"
        android:fontFamily="@font/pixelmix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/giveMeAJokeBtn"
        android:layout_width="@dimen/image_button_width"
        android:layout_height="@dimen/image_button_height"
        android:layout_marginStart="@dimen/image_button_margin_start"
        android:layout_marginTop="@dimen/image_button_margin_top"
        android:layout_marginEnd="@dimen/image_button_margin_end"
        android:layout_marginBottom="@dimen/image_button_margin_bottom"
        android:src="@drawable/btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/btn_text_view_width"
        android:layout_height="@dimen/btn_text_view_height"
        android:fontFamily="@font/pixelmix_bold"
        android:lineHeight="@dimen/btn_line_height"
        android:text="New joke"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/giveMeAJokeBtn"
        app:layout_constraintEnd_toEndOf="@+id/giveMeAJokeBtn"
        app:layout_constraintStart_toStartOf="@+id/giveMeAJokeBtn"
        app:layout_constraintTop_toTopOf="@+id/giveMeAJokeBtn" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>